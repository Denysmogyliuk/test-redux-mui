{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2021",
    "sourceMap": true,
    "types": ["node", "jest", "react", "react-dom"] // This prevents reading of unnecessary @types/*.d.ts files
  },
}





